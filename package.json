{
  "name": "@ggedde/spry-css",
  "version": "3.0.0",
  "description": "A simple and customizable CSS Toolkit while being as lightweight as possible",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ggedde/spry-css.git"
  },
  "keywords": [
    "CSS",
    "Utilities"
  ],
  "author": "ggedde",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ggedde/spry-css/issues"
  },
  "homepage": "https://github.com/ggedde/spry-css#readme",
  "scripts": {
    "dev": "node_modules/.bin/chokidar *.scss -c 'npm run build'",
    "dev-full": "node_modules/.bin/chokidar *.scss -c 'npm run build-full'",
    "build": "node_modules/.bin/sass --style=compressed --no-source-map ./spry.scss | node_modules/.bin/postcss --map false -o ./dist/spry.min.css; cp ./dist/spry.min.css ./docs/spry.min.css; gzip -c4 ./dist/spry.min.css | wc -c;",
    "build-prism": "node_modules/.bin/postcss ./docs/prism.css --map false -o ./docs/prism.min.css; gzip -c4 ./docs/prism.min.css | wc -c;",
    "build-full": "node_modules/.bin/sass ./spry.scss:./dist/spry.min.css; cp ./dist/spry.min.css ./docs/spry.min.css; cp ./dist/spry.min.css.map ./docs/spry.min.css.map; gzip -c4 ./dist/spry.min.css | wc -c;",
    "build-js": "node_modules/.bin/terser ./docs/spry.js --config-file .terser -o ./dist/spry.min.js; cp ./dist/spry.min.js ./docs/spry.min.js; gzip -c4 ./dist/spry.min.js | wc -c;"
  },
  "dependencies": {
    "autoprefixer": "^10.4.1",
    "chokidar-cli": "^3.0.0",
    "cssnano": "^5.1.14",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-combine-media-query": "^1.0.1",
    "sass": "^1.56.1",
    "terser": "^5.24.0"
  }
}
